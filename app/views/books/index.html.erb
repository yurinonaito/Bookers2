
<h1><strong>Books</strong></h1>

  <table>
    <thead>
    <tr>
      <th></th>
      <th><strong>Title</strong></th>
      <th><strong>Opinion</strong></th>
    </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= link_to book.title, book_path(book) %></td>
  <td><%= book.body %></td>
  </tr>
  <% end %>

  </tbody>
</table>

  
<h1><strong>New Book</strong></h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
