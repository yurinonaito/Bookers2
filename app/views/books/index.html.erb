<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>

<% end %>
  
  
<h1><strong>New Book</strong></h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
