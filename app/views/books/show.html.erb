<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'books/book', book: @books, user: @user %>
</div>

<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>

<table class="table">
  <tbody>
<tr>
  <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@book.user.id) %></td>
  <td><%= link_to @book.title, book_path(@book) %></td>
  <td><%= @book.body %></td>
  <% if @book.user_id == current_user.id %>
  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか?" } %></td>
  <% end %>
</tr>
  </tbody>
</table>
</div>
</div>
</div>