<%= render 'books/book', book: @book, user: @user %>


<h1>Book detail</h1>

<table>
  <tbody>
<tr>
  <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(current_user) %></td>
  <td><%= link_to @book.title, book_path(@book) %></td>
  <td><%= @book.body %></td>
  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか?" } %></td>
</tr>
  </tbody>
</table>
