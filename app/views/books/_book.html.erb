<div>
  <h3>User info</h3>

  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <p>name　　　　<%= user.name %></p>
  <p>introduction<%= user.introduction %></p>
  
  <p><%= link_to "設定", edit_user_path(user.id) %></p>
</div>

  
<h1><strong>New Book</strong></h1>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
